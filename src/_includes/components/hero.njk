<!-- Hero Image -->
{% if settings.heroImage %}
  <div class="flex justify-center">
    <img class="object-cover h-32 w-auto sm:h-48 rounded-full" src="{{ settings.heroImage }}" alt="{{ settings.logoTitle }}"/>
  </div>
{% endif %}
<!-- Hero Caption -->
{% if settings.heroCaption %}
  <header class="pt-4 {{ settings.colors.heroCaption | default('text-gray-400',true) }} mx-auto w-full text-center">
    <div class="text-lg font-light">
      {{ settings.heroCaption }}
    </div>
  </header>
{% endif %}
